@model ProjectTaskVm
@{
    ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>*@

<h4>ProjectTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled="disabled" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectShortName" class="control-label"></label>
                <input asp-for="ProjectShortName" class="form-control" disabled="disabled" />
                <span asp-validation-for="ProjectShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeToComplete" class="control-label"></label>
                <input asp-for="TimeToComplete" class="form-control" />
                <span asp-validation-for="TimeToComplete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" class="form-control" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @*<input asp-for="Status" class="form-control" />*@
                @Html.DropDownList("Status", new SelectList(@ViewBag.ProjectTaskStatuses), new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                @Html.DropDownList("ProjectId", ViewBag.ProjectSelectList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                @Html.DropDownList("EmployeeId", ViewBag.EmployeeSelectList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" name="IsCreateNotEdit" value="@ViewBag.IsCreateNotEdit" />
                @*<input type="hidden" asp-for="EmployeeFullName" value="@Model.EmployeeFullName" />*@ @*DOTO: why do I need it?*@
            </div>
            <div class="form-group">
                <partial name="Buttons\_SaveButtonPartial" />
                <partial name="Buttons\_CancelButtonPartial" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
