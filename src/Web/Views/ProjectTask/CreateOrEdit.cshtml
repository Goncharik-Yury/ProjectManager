@model ProjectTaskFilledVm

<h4>ProjectTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        @if (Model.ProjectTasks == null)
        {
            ViewData["Title"] = "Create";
            <h1>Create</h1>

            <form asp-action="Create" method="post">

                <partial name="_ProjectTaskFormPartial" />

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                    @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-info" })
                </div>
            </form>
        }
        else
        {
            ViewData["Title"] = "Edit";
            <h1>Edit</h1>

            <form asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="@Model.ProjectTasks.Id" class="control-label"></label>
                    <input asp-for="@Model.ProjectTasks.Id" class="form-control" disabled="disabled" />
                    <input asp-for="@Model.ProjectTasks.Id" class="form-control" type="hidden" />
                    <span asp-validation-for="@Model.ProjectTasks.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ProjectTasks.ProjectShortName" class="control-label"></label>
                    <input asp-for="@Model.ProjectTasks.ProjectShortName" class="form-control" disabled="disabled" />
                </div>
                <partial name="_ProjectTaskFormPartial" />
                

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                    @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-info" })
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
