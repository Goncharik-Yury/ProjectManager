@model List<ProjectTaskVm>

@{
    ViewData["Title"] = "Tasks main page";
}

<div>
    <h2>Project Tasks</h2>
    <hr />
    @Html.ActionLink("Create", "Create", FormMethod.Get, new { @class = "btn btn-info" })
    <br /><br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].ProjectShortName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].TimeToComplete)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].ProjectId)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].EmployeeFullName)
            </th>
        </tr>
        @foreach (ProjectTaskVm projectTask in Model)
        {
            <tr>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.Id)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.ProjectShortName)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.Name)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.TimeToComplete)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.BeginDate)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.EndDate)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.Status)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.ProjectId)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => projectTask.EmployeeFullName)
                </td>

                <td class="col-sm-10">
                    @Html.ActionLink("Edit", "Edit", new { id = projectTask.Id }, new { @class = "btn btn-info" })
                </td>
                <td class="col-sm-10">
                    <form asp-action="Delete" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <input type="hidden" value="@projectTask.Id" name="id" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
