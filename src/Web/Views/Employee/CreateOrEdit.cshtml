@model EmployeeVm

@{
    ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>*@

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic " class="control-label"></label>
                <input asp-for="Patronymic " class="form-control" />
                <span asp-validation-for="Patronymic " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" name="IsCreateNotEdit" value="@ViewBag.IsCreateNotEdit" />
                @*<input type="hidden" name="TestField" value="@ViewBag.ska" />*@
            </div>
            <div class="form-group">
                <partial name="Buttons\_SaveButtonPartial" />
                <partial name="Buttons\_CancelButtonPartial" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
