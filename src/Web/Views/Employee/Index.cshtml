@model List<EmployeeViewModel>

@{
    ViewData["Title"] = "Employees main page";
}

<div>
    <h2>Employees</h2>
    <hr />
    <partial name="Buttons\_CreateButtonPartial" />
    <br /><br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].Patronymic)

            </th>
            <th>
                @Html.DisplayNameFor(m => m[0].Position)
            </th>
        </tr>
        @foreach (EmployeeViewModel employee in Model)
        {
            <tr>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => employee.Id)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => employee.LastName)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => employee.FirstName)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => employee.Patronymic)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(q => employee.Position)
                </td>
                <td class="col-sm-10">
                    <partial name="Buttons\_EditButtonPartial" , model="@employee.Id" />
                </td>
                <td class="col-sm-10">
                    <partial name="Buttons\_DeleteButtonPartial" , model="@employee.Id" />
                </td>
            </tr>
        }
    </table>
</div>
