@model ProjectTaskFilledVm

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.Name" class="control-label"></label>
    <input asp-for="@Model.ProjectTasks.Name" class="form-control" />
    <span asp-validation-for="@Model.ProjectTasks.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.TimeToComplete" class="control-label"></label>
    <input asp-for="@Model.ProjectTasks.TimeToComplete" class="form-control" />
    <span asp-validation-for="@Model.ProjectTasks.TimeToComplete" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.BeginDate" class="control-label"></label>
    <input asp-for="@Model.ProjectTasks.BeginDate" class="form-control" />
    <span asp-validation-for="@Model.ProjectTasks.BeginDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.EndDate" class="control-label"></label>
    <input asp-for="@Model.ProjectTasks.EndDate" class="form-control" />
    <span asp-validation-for="@Model.ProjectTasks.EndDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.Status" class="control-label"></label>
    <select asp-for="@Model.ProjectTasks.Status" asp-items="Html.GetEnumSelectList<ProjectTaskStatus>()" class="form-control"></select>
    <span asp-validation-for="@Model.ProjectTasks.Status" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.ProjectId" class="control-label"></label>
    @Html.DropDownList("ProjectTasks.ProjectId", Model.ProjectSelectList as IEnumerable<SelectListItem>,
    new { @class = "form-control" })
    <span asp-validation-for="@Model.ProjectTasks.ProjectId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.ProjectTasks.EmployeeId" class="control-label"></label>
    @Html.DropDownList("ProjectTasks.EmployeeId", Model.EmployeeSelectList as IEnumerable<SelectListItem>,
    new { @class = "form-control" })
    <span asp-validation-for="@Model.ProjectTasks.EmployeeId" class="text-danger"></span>
</div>
